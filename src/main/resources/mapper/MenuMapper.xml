<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stewart.building.mbg.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stewart.building.mbg.pojo.Menu">
        <id column="id" property="id" />
        <result column="url" property="url" />
        <result column="name" property="name" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="title" property="title" />
        <result column="icon" property="icon" />
        <result column="pid" property="pid" />
    </resultMap>

    <resultMap id="Menus" type="com.stewart.building.mbg.pojo.Menu" extends="BaseResultMap">
        <collection property="children" ofType="com.stewart.building.mbg.pojo.Menu">
            <id column="id2" property="id" />
            <result column="url2" property="url" />
            <result column="name2" property="name" />
            <result column="path2" property="path" />
            <result column="component2" property="component" />
            <result column="title2" property="title" />
            <result column="icon2" property="icon" />
        </collection>

    </resultMap>
    <resultMap id="MenusByRoleId" type="com.stewart.building.mbg.pojo.Menus" extends="BaseResultMap">

        <collection property="meta" ofType="com.stewart.building.mbg.pojo.Meta">
            <result column="title1" property="title" />
            <result column="icon1" property="icon" />
        </collection>
        <collection property="children" ofType="com.stewart.building.mbg.pojo.Menus">
            <result column="name2" property="name" />
            <result column="path2" property="path" />
            <result column="component2" property="component" />
            <collection property="meta" ofType="com.stewart.building.mbg.pojo.Meta">
                <result column="title2" property="title" />
                <result column="icon2" property="icon" />
            </collection>
        </collection>

    </resultMap>
    <resultMap id="MenuWithRole" type="com.stewart.building.mbg.pojo.Menu" extends="BaseResultMap">
        <collection property="roles" ofType="com.stewart.building.mbg.pojo.Role">
            <id column="rid" property="id" />
            <result column="rname" property="name" />
        </collection>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, url, name, path, component, title, icon, pid
    </sql>

    <!-- 根据用户id获取所有的menu   -->
    <select id="getMenusByUserId" resultMap="Menus">
        SELECT
            DISTINCT
            m1.*,
            m2.id AS id2,
            m2.url AS url2,
            m2.`name` AS name2,
            m2.path AS path2,
            m2.component AS component2,
            m2.title AS title2,
            m2.icon AS icon2
        FROM
            menu AS m1,
            menu AS m2,
            role_menu AS rm,
            user_role AS ur
        WHERE
            m1.id=m2.pid
        AND
            m2.id = rm.menu_id
        AND
            rm.role_id =ur.role_id
        AND
            ur.user_id = #{userId}
    </select>

    <select id="getMenuWithRole" resultMap="MenuWithRole">
        SELECT
            m.*,
            r.id AS rid,
            r.`name` AS rname

        FROM
            menu m,
            role_menu rm,
            role r
        WHERE
            m.id = rm.menu_id
        AND
            r.id = rm.role_id
        ORDER BY
            m.id
    </select>



    <select id="getAllMenu" resultMap="Menus">
        SELECT
        DISTINCT
            m1.*,
            m2.id AS id2,
            m2.url AS url2,
            m2.`name` AS name2,
            m2.path AS path2,
            m2.component AS component2,
            m2.title AS title2,
            m2.icon AS icon2
        FROM
            menu AS m1,
            menu AS m2
        WHERE
            m1.id = m2.pid
    </select>
    <select id="getMenuWithRoleId" resultMap="MenusByRoleId">
         SELECT
            DISTINCT
            m1.`name` AS `name`,
            m1.path AS path,
            m1.component AS component,
            m1.title AS title1,
            m1.icon AS icon1,
            m2.`name` AS name2,
            m2.path AS path2,
            m2.component AS component2,
            m2.title AS title2,
            m2.icon AS icon2
        FROM
            menu AS m1,
            menu AS m2,
            role_menu AS rm
        WHERE
            m1.id=m2.pid
        AND
            m2.id = rm.menu_id
        AND
            rm.role_id =#{roleId}

    </select>

</mapper>
